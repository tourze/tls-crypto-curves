parameters:
    ignoreErrors:
        # 忽略 PHPDoc 标签错误
        - '#PHPDoc tag @var for variable \$this contains unknown class Tourze\\CryptoCurves\\Tests#'
        
        # 忽略测试中的方法调用
        - '#Call to method Symfony\\Bundle\\FrameworkBundle\\Test\\WebTestCase::createClient\(\) with array\{environment: ''test''\} will always evaluate to true#'
        
        # 忽略 Bundle 基类
        - '#Class Tourze\\CryptoCurves\\TlsCryptoCurvesBundle extends unknown class Symfony\\Component\\HttpKernel\\Bundle\\Bundle#'
        
        # 忽略配置定义器
        - '#Call to an undefined method Symfony\\Component\\Config\\Definition\\Builder\\NodeDefinition::children\(\)#'
        
        # 忽略 NIST 曲线类名规则 - 这些是标准密码学曲线名称
        -
            message: '#类名 \"(NISTP256|NISTP384|NISTP521)\" 不符合帕斯卡命名法.*#'
            paths:
                - src/NISTP256.php
                - src/NISTP384.php
                - src/NISTP521.php